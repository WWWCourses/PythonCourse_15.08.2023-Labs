{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run with Python",
            "type": "shell",
            // "command": "python",
            "command": "${command:python.interpreterPath}",
            "args": [
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": false,
                "clear": true,
                "echo": false,
                "showReuseMessage": false
            }
        }
    ]
}